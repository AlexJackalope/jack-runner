class Main {
    function void main() {
        var SquareGame game;
        var int statusCode;

        while (true) {
            do Score.resetToZero();
            let game = SquareGame.new();
            let statusCode = game.run();
            do game.dispose();
            if (statusCode = 0) {
                return;
            }
        }

        return;
    }
}